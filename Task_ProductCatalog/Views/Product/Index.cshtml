@{
}
@model IEnumerable<ProductCatalog.Application.DTOs.ProductDto>

<h2>Active Products</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Start Date</th>
            <th>Duration</th>
            <th>Price</th>
            <th>Category</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.StartDate</td>
                <td>@product.Duration</td>
                <td>@product.Price</td>
                <td>@product.CategoryName</td>
                <td><img src="@product.ImagePath" width="100" height="100" /></td>
            </tr>
        }
    </tbody>
</table>
